{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://jsonschema.net",
    "properties": {
        "db_name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "doclink": {
            "format": "uri",
            "type": "string"
        },
        "host": {
            "format": "hostname",
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "port": {
            "type": "integer"
        },
        "username": {
            "type": "string"
        }
    },
    "required": [
        "description",
        "doclink",
        "host",
        "port",
        "username",
        "password",
        "db_name"
    ],
    "type": "object"
}
