{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "webpagetest-run",
  "description": "Web-performance metrics",
  "properties": {
    "appName": {
      "type": "string"
    },
    "channel": {
      "type": "string"
    },
    "connection": {
      "type": "string"
    },
    "domain": {
      "type": "string"
    },
    "platform": {
      "type": "string",
      "enum": ["desktop", "mobile"]
    },
    "runner": {
      "type": "string"
    },
    "runId": {
      "type": "integer"
    },
    "sessionState": {
      "type": "string",
      "enum": ["auth", "noAuth"]
    },
    "metrics": {
      "additionalProperties": {
        "properties": {
          "firstView": {
            "properties": {
              "median": {
                "type": "number"
              },
              "standardDeviation": {
                "type": "number"
              }
            },
            "anyOf": [
              {"required": ["median"]},
              {"required": ["standardDeviation"]}
            ],
            "type": "object"
          }
        },
        "required": ["firstView"],
        "type": "object"
      },
      "type": "object"
    }
  },
  "required": ["appName", "channel", "connection", "domain", "platform", "runner", "runId", "sessionState", "metrics"],
  "additionalProperties": true
}
