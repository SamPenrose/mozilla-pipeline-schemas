{
  "type": "object",
  "additionalProperties": false,
  "required": ["when", "took"],
  "properties": {
    "didLogin": { "type": "boolean" },
    "when": { "type": "integer" },
    "devices": {
      "type": "array",
      "items": { 
        "required": ["os", "id", "version"],
        "additionalProperties": false,
        "type": "object",
        "properties": {
          "id": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "os": { "type": "string" },
          "version": { "type": "string" }
        }
      }
    },
    "status": {
      "type": "object",
      "anyOf": [
        { "required": ["sync"] },
        { "required": ["service"] }
      ],
      "additionalProperties": false,
      "properties": {
        "sync": { "type": "string" },
        "service": { "type": "string" }
      }
    },
    "why": { "type": "string" },
    "took": { "type": "integer", "minimum": -1 },
    "failureReason": @TELEMETRY_SYNCERROR_1_JSON@ ,
    "engines": {
      "type": "array",
      "minItems": 1,
      "items": { 
        "type": "object",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
          "failureReason": @TELEMETRY_SYNCERROR_1_JSON@ ,
          "name": { "type": "string" },
          "took": { "type": "integer", "minimum": 1 },
          "status": { "type": "string" },
          "incoming": {
            "type": "object",
            "additionalProperties": false,
            "anyOf": [
              {"required": ["applied"]},
              {"required": ["failed"]},
              {"required": ["newFailed"]},
              {"required": ["reconciled"]}
            ],
            "properties": {
              "applied": { "type": "integer", "minimum": 1 },
              "failed": { "type": "integer", "minimum": 1 },
              "newFailed": { "type": "integer", "minimum": 1 },
              "reconciled": { "type": "integer", "minimum": 1 },
              "succeeded": { "type": "integer", "minimum": 1 }
            }
          },
          "outgoing": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "anyOf": [
                {"required": ["sent"]},
                {"required": ["failed"]}
              ],
              "properties": {
                "sent": { "type": "integer", "minimum": 1 },
                "failed": { "type": "integer", "minimum": 1 }
              }
            }
          },
          "validation": {
            "type": "object",
            "additionalProperties": false,
            "anyOf": [
              { "required": ["checked"] },
              { "required": ["failureReason"] }
            ],
            "properties": {
              "checked": { "type": "integer", "minimum": 0 },
              "failureReason": @TELEMETRY_SYNCERROR_1_JSON@ ,
              "took": { "type": "integer" },
              "version": { "type": "integer" },
              "problems": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["name", "count"],
                  "properties": {
                    "name": { "type": "string" },
                    "count": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}