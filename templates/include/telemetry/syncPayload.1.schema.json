{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for Sync pings, documentation avaliable in toolkit/components/telemetry/docs/sync-ping.rst",
  "type": "object",
  "properties": {
    "version": { "type": "integer", "minimum": 0 },
    "os": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "locale": { "type": "string" }
      }
    },
    "discarded": { "type": "integer", "minimum": 1 },
    "why": { "type": "string" },
    "uid": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{32}$"
    },
    "deviceID": {
      "type": ["string", "null"],
      "pattern": "^[0-9a-f]{64}$"
    },
    "sessionStartDate": { "type": "string" },
    "syncs": {
      "type": "array",
      "minItems": 0,
      "items": @TELEMETRY_SYNCITEM_1_JSON@
    },
    "events": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "array",
        "minItems": 4,
        "maxItems": 6
      }
    },
    "histograms": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "min": { "type": "integer" },
          "max": { "type": "integer" },
          "histogram_type": { "type": "integer" },
          "sum": { "type": "integer" },
          "ranges": { "type": "array" },
          "counts": { "type": "array" }
        }
      }
    }
  }
}
